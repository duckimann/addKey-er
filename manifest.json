{
    "manifest_version": 2,
    "name": "Thêm Phím Tắt-er",
    "author": "duckimann",
    "version": "1.0",
    "icons": {
		"16": "favicon.png",
		"48": "favicon.png",
		"128": "favicon.png"
    },
    "browser_action": {
		"default_icon": {
			"16": "favicon.png",
			"24": "favicon.png",
			"32": "favicon.png"
		},
		"default_popup": "opts.html"
	},
    "background": {
        "scripts": ["bg.js"],
        "persistence": false
    },
    "commands": {
        "clickCBtnFB": {
            "description": "Click Nút Xác Nhận Trên Facebook"
        },
        "flickrPhotoNewTab": {
            "description": "Mở ảnh trong tab mới (Flickr Only)"
        },
        "dl": {
            "description": "Download Ảnh (JPG / JPEG / PNG)"
        }
	},
    "permissions": [
		"downloads.shelf",
        "downloads",
        "notifications",
        "storage",
        "tabs",
        "webRequest",
		"webRequestBlocking",
        "<all_urls>"
    ]
}